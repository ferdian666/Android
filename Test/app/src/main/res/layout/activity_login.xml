<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F68DB1"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="372dp"
            android:layout_height="137dp"
            android:hint="Login BosQ"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"
            android:textColorHint="#B18F2C"/>

        <EditText
            android:id="@+id/idUsername"
            android:layout_width="372dp"
            android:layout_height="58dp"
            android:inputType="text"
            android:hint="Username"
            />

        <EditText
            android:id="@+id/idPassword"
            android:layout_width="372dp"
            android:layout_height="58dp"
            android:inputType="textPassword"
            android:hint="Password"
            />

        <Button
            android:id="@+id/idBtnSubmit"
            android:text="Login"
            android:textColor="#E3CE92"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:background="#534F41" />

        <TextView
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:textColor="#B33FC6"
            android:text="Register Here !, Sing Up"/>


    </LinearLayout>

</layout>